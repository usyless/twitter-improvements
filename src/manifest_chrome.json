{
  "manifest_version": 3,
  "name": "Improvements for Twitter",
  "version": "1.6.0",
  "author": "usy",
  "homepage_url": "https://github.com/usyless/twitter-improvements",
  "description": "Various helpful additions and changes for Twitter",
  "icons": {
    "16": "/icons/icon-16.png",
    "32": "/icons/icon-32.png",
    "48": "/icons/icon-48.png",
    "96": "/icons/icon-96.png",
    "128": "/icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "/icons/icon-16.png",
      "32": "/icons/icon-32.png",
      "48": "/icons/icon-48.png",
      "96": "/icons/icon-96.png",
      "128": "/icons/icon-128.png"
    },
    "default_title": "Settings"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": [
    "contextMenus",
    "downloads",
    "clipboardWrite",
    "storage"
  ],
  "background": {
    "service_worker": "/background.js"
  },
  "host_permissions": [
    "https://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*"
      ],
      "js": [
        "/twitter_improvements.js"
      ],
      "css": [
        "/twitter_improvements.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://x.com/*"
      ],
      "js": [
        "/element_hiding.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://x.com/*"
      ],
      "js": [
        "/fetch-intercept-loader.js"
      ],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "/settings/settings.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "matches": ["https://x.com/*"],
      "resources": ["/fetch-intercept.js"]
    }
  ]
}